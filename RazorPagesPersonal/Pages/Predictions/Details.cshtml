@page "{id:int}"
@model RazorPagesPersonal.Pages.Predictions.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1 class="border-bottom border-white d-flex justify-content-center text-white fw-bold fst-italic">Details</h1>

<div class="text-white">
    <h4 class="text-white-50 fw-bold fst-italic">Predictions</h4>
    <hr />
    <dl class="row">
        <dt class="text-white-50 fw-bold fst-italic col-sm-2">
            @Html.DisplayNameFor(model => model.Predictions.Created)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Predictions.Created)
        </dd>
        <dt class="text-white-50 fw-bold fst-italic col-sm-2">
            @Html.DisplayNameFor(model => model.Predictions.Question)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Predictions.Question)
        </dd>
        <dt class="text-white-50 fw-bold fst-italic col-sm-2">
            @Html.DisplayNameFor(model => model.Predictions.Predictions)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Predictions.Predictions)
        </dd>
        <dt class="text-white-50 fw-bold fst-italic col-sm-2">
            @Html.DisplayNameFor(model => model.Predictions.True)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Predictions.True)
        </dd>
        <dt class="text-white-50 fw-bold fst-italic col-sm-2">
            @Html.DisplayNameFor(model => model.Predictions.WhenComplete)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Predictions.WhenComplete)
        </dd>
    </dl>
</div>
<div class="d-flex justify-content-evenly align-content-center border-top border-white">
    <a class="btn btn-primary mt-3" asp-page="./Edit" asp-route-id="@Model.Predictions.Id">Edit</a> |
    <a class="btn btn-outline-primary mt-3" asp-page="./Index">Back to List</a>
</div>
