@page "{id:int}"
@model RazorPagesPersonal.Pages.Predictions.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1 class="border-bottom border-white d-flex justify-content-center text-white fw-bold fst-italic">Delete</h1>
<div class="text-white">
    <h4 class="text-white-50 fw-bold fst-italic">Predictions</h4>
    <hr />
    <dl class="row">
        <dt class="text-white-50 fw-bold fst-italic col-sm-2">
            @Html.DisplayNameFor(model => model.Predictions.Created)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Predictions.Created)
        </dd>
        <dt class="text-white-50 fw-bold fst-italic col-sm-2">
            @Html.DisplayNameFor(model => model.Predictions.Question)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Predictions.Question)
        </dd>
        <dt class="text-white-50 fw-bold fst-italic col-sm-2">
            @Html.DisplayNameFor(model => model.Predictions.Predictions)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Predictions.Predictions)
        </dd>
        <dt class="text-white-50 fw-bold fst-italic col-sm-2">
            @Html.DisplayNameFor(model => model.Predictions.True)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Predictions.True)
        </dd>
        <dt class="text-white-50 fw-bold fst-italic col-sm-2">
            @Html.DisplayNameFor(model => model.Predictions.WhenComplete)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Predictions.WhenComplete)
        </dd>
    </dl>
    <form class="d-flex justify-content-center align-items-center border-top border-white" method="post">
        <span class="mt-3">
            <h3 class="text-white-50 mx-3">
                Are you sure you want to delete this?    
                <input type="hidden" asp-for="Predictions.Id" />
                <input class="btn btn-danger" type="submit" value="Delete" />
                <strong> | </strong>
                <a class="btn btn-outline-primary" asp-page="./Index">
                    Back to List
                </a>
            </h3>
        </span>
    </form>
</div>
