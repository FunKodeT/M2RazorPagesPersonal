@page
@model RazorPagesPersonal.Pages.Predictions.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Predictions[0].Created)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Predictions[0].Question)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Predictions[0].Predictions)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Predictions[0].True)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Predictions[0].WhenComplete)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Predictions) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Created)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Question)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Predictions)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.True)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WhenComplete)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
