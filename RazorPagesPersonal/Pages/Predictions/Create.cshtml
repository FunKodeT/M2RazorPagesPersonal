@page
@model RazorPagesPersonal.Pages.Predictions.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1 class="border-bottom border-white d-flex justify-content-center text-white fw-bold fst-italic">Create</h1>

<section class="text-white">
    <h4 class="text-white-50 fw-bold fst-italic">
        Predictions
    </h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post" class="d-inline">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="mb-3 mt-2">
                    <label class="rounded-3 text-center bg-black">
                        This Prediction will be created at:
                        <br />
                        <span class="text-white-50">
                            @DateTime.Now
                        </span>
                    </label>
                </div>
                <div class="form-group">
                    <label class="mb-2" asp-for="Predictions.Question" class="control-label"></label>
                    <input asp-for="Predictions.Question" class="form-control" />
                    <input type="submit" value="Create" class="mt-1 mb-1 btn btn-primary" />
                    <span asp-validation-for="Predictions.Question" class="text-danger"></span>
                </div>
            </form>
        </div>
    </div>
</section>

<div class="d-flex justify-content-evenly align-content-center border-top border-white">
    <a class="mt-3 btn btn-outline-primary" asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
