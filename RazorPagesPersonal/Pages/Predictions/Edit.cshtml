@page "{id:int}"
@model RazorPagesPersonal.Pages.Predictions.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Predictions</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Predictions.Id" />
            <input type="hidden" asp-for="Predictions.Created" />
            <input type="hidden" asp-for="Predictions.Question" />
            <input type="hidden" asp-for="Predictions.Predictions" />
            <div class="form-group">
                <label asp-for="Predictions.True" class="control-label"></label>
                <select asp-for="Predictions.True" class="form-control">
                    <option value=true>Yes</option>
                    <option value=false>No</option>
                </select>
                <span asp-validation-for="Predictions.True" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Predictions.WhenComplete" class="control-label"></label>
                <input asp-for="Predictions.WhenComplete" class="form-control" />
                <span asp-validation-for="Predictions.WhenComplete" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
